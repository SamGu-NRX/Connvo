{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "LinkedUp API Documentation",
  "logo": {
    "dark": "../public/linkeduplogos/linkedupwhite.svg",
    "light": "../public/linkeduplogos/linkedupblack.svg"
  },
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "favicon": "../public/linkeduplogos/linkedupwhite.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["introduction", "authentication"]
          },
          {
            "group": "API Reference",
            "openapi": {
              "source": "api-reference/convex-openapi.yaml",
              "directory": "api-reference"
            },
            "pages": ["api-reference/introduction"]
          }
        ]
      }
    ]
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "mdx": {
      "server": "https://linkedup-dev.convex.cloud",
      "auth": {
        "method": "bearer",
        "name": "Authorization"
      }
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://app.linkedup.example.com"
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/linkedup"
    }
  }
}
